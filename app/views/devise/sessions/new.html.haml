- flash.each do |_key, value|
  %p.error= value

.ui.raised.segment.left.aligned
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'ui large form' }) do |f|
    .field
      .ui.left.icon.input
        %i.user.icon
        = f.email_field :email, autofocus: true, placeholder: 'E-mail address'
    .field
      .ui.left.icon.input
        %i.lock.icon
        =f.password_field :password, placeholder: 'Password'
    .field.left.aligned
      .ui.checkbox
        = f.check_box :remember_me
        %label{ for: 'user_remember_me' } Remember me?
    %button.ui.fluid.large.primary.submit.button Login
